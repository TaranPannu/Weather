<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="131dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="16dp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="38dp"
            android:id="@+id/img"/>



        <TextView

        android:id="@+id/exampleText"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:text="Date: 2022-02-03"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
        <TextView
            android:id="@+id/Dtemp"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="270dp"
            android:textSize="25sp"
            android:hint="5C"/>
        <TextView
            android:id="@+id/Dhigh"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@+id/exampleText"
app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="15sp"
            android:hint="High: 5C"
            />
        <TextView
            android:textColor="@android:color/white"

            android:id="@+id/Dlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/exampleText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="85dp"
            android:textSize="15sp"
            android:hint="Low: 5C"
            />

        <TextView
            android:id="@+id/Dwind"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
android:layout_marginLeft="20dp"
            android:hint="Wind: 5C"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Dpreci"
            app:layout_constraintTop_toBottomOf="@+id/Dlow"

            />

        <TextView
            android:id="@+id/Dsnow"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="200dp"
            android:hint="snow: 5C"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dwind" />
        <TextView
            android:id="@+id/Dpreci"
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Dhigh"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:hint="Rain: 5C"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>